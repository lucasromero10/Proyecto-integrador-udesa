<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/stylesheets/detalleUsuario.css">
    <%- include("./partials/headGeneral") %> 
</head>

<body>
    <%- //if usuarioLogueado%>
    <%- include("./partials/header") %> 
    <% //If usuarioDeslogueado %>
    <% //include("./partials/headerDeslogueado")%>  

    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-small">
                <section class="info-usuario uk-flex uk-flex-around uk-width-1-1">
                    <div class="uk-width-1-3 uk-flex uk-flex-center uk-flex-middle">
                        <img src="<%= elUsuario.fotoPerfil  %>" alt="foto de perfil" class="foto-perfil">
                    </div>
                    <div class="uk-width-2-3 uk-flex uk-flex-column uk-flex-around">
                        <div class="uk-flex uk-flex-middle">
                            <h3 class="uk-margin-remove"><%= elUsuario.nombre  %></h3>
                            <button class="uk-button uk-button-small uk-button-primary uk-margin-left">Seguir</button>
                        </div>
                        <div>
                            <ul class="red-usuario uk-flex uk-flex-between uk-width-1-2">
                                <li>180 posts</li>
                                <li>20M seguidores</li>
                                <li>227 seguidos</li>
                            </ul>
                        </div>
                    </div>
                    
               </section>

               <section class="muro uk-flex uk-flex-middle uk-flex-center">
                <div class="uk-grid uk-child-width-1-3 uk-width-1-1 uk-margin-remove" uk-grid>
                    <% for( let i = 0; i < 18; i++ ) { %>
                        <div
                        class="uk-card uk-card-hover uk-card-body uk-flex uk-flex-column uk-flex-middle uk-flex-center ">
                        <a href="http://localhost:3000/home/detallePost/1" class="link-detalle">
                            <img src="https://i.pinimg.com/originals/c0/42/65/c04265a64f76d11c12c7d9a38c6d20ab.jpg" alt="foto de perfil" class="foto-perfil">
                            <p class="uk-text-center">Post <%= i %></p>
                        </a>
                    </div>
                    <% } %>
                    
                </div>
            </section>
            </div>
        </div>
    </main>

 

</body>
<footer>
    <%- include("./partials/footer") %> 
</footer>

</html>